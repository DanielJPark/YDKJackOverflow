

<%= @user.username %>
<br>
<b><ul>Questions Asked:</ul></b>
<br>
<% @questions.each do |question| %>
<%= question.title %>
<% end %>
<br>
<b><ul>Questions Answered:</ul></b>
<br>
<% @answers.each do|answer| %>
<%= answer.question.title %> - <%= answer.content %>
<% end %>
<br>

<br>

<b><ul>Comments Made on Questions:</ul></b>
<% @comments_on_questions.each do |comment| %>
    <br>
    <%= comment.post.title %>
    <%= comment.content %>
    <br>
<% end %>


<b><ul>Comments Made on Answers</ul></b>

<% @coments_on_answers.each do |comment| %>
  <br>
  <%= comment.post.title %>
  <%= comment.post.content %>
  <br>
<% end %>

