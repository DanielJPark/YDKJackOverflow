

<%= @user.username %>
<br>
<b>Questions Asked:</b>
<br>
<% @questions.each do |question| %>
<%= question.title %>
<% end %>
<br>
<br>
<b>Questions Answered:</b>
<br>
<% @answers.each do|answer| %>
<%= answer.question.title %> - <%= answer.content %>
<br>
<% end %>
<br>
<br>
<b>3 Most Recent Comments Made on Questions:</b>
<% @comments_on_questions.each do |comment| %>
    <br>
    <%= comment.post.title %> - <%= comment.content %>
    <br>
<% end %>
<br>
<b>3 Most Recent Comments Made on Answers</b>
<% @comments_on_answers.each do |comment| %>
  <br>
  <%= comment.post.question.title %>
  <br>
  <%= comment.post.content %> - <%= comment.content %>
  <br>
<% end %>

